
<view class="user">
  <van-skeleton
    title
    avatar
    row="3"
    loading="{{ loading }}"
  >
    <view class="flex info">
      <image src="{{ userInfo.avatarUrl }}" class="avatar"></image>
      <view class="userInfo">
        <view class="name">{{ userInfo.nickname }}</view>
        <view class="level">{{ userInfo.level }}</view>
      </view>
    </view>
  </van-skeleton>
</view>

