
<van-cell-group>
 
  <van-field
    value="{{ phone }}"
    label="手机号"
    placeholder="请输入手机号"
    bind:change="phone"
    border="{{ false }}"
  />
  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    bind:change="password"
    border="{{ false }}"
  />
</van-cell-group>

<van-button color="linear-gradient(to right, #4bb0ff, #6149f6)" block bind:click="login">立即登录</van-button>
